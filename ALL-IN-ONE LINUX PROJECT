# project setup

tanmai_arni@DELL:~$ mkdir project
tanmai_arni@DELL:~$ cd project
tanmai_arni@DELL:~/project$ pwd
/home/tanmai_arni/project
tanmai_arni@DELL:~/project$ mkdir input
tanmai_arni@DELL:~/project$ mkdir logs
tanmai_arni@DELL:~/project$ mkdir backup
tanmai_arni@DELL:~/project$ mkdir output
tanmai_arni@DELL:~/project$ ls
backup  input  logs  output

