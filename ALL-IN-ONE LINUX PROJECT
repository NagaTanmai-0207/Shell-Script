# File organizer - manual
tanmai_arni@DELL:~/project/input$ mv system.log /home/tanmai_arni/project/logs
tanmai_arni@DELL:~/project/input$ cd ..
tanmai_arni@DELL:~/project$ ls logs
system.log
tanmai_arni@DELL:~/project$ mkdir text
tanmai_arni@DELL:~/project$ ls
backup  input  logs  output  text
tanmai_arni@DELL:~/project$ cd input
tanmai_arni@DELL:~/project/input$ mv text.txt /home/tanmai_arni/project/text
tanmai_arni@DELL:~/project/input$ cd ..
tanmai_arni@DELL:~/project$ ls text
text.txt

# automation
tanmai_arni@DELL:~/project/input$ cd ..
tanmai_arni@DELL:~/project$ find input -name "*.txt" -exec mv {} text/ \;
tanmai_arni@DELL:~/project$ ls text
a.txt  b.txt  text.txt
tanmai_arni@DELL:~/project$ find input -name "*.log" -exec mv {} logs/ \;
tanmai_arni@DELL:~/project$ ls logs
system.log  x.log  y.log

# Log analyzer
# IN SINGLE FILE
tanmai_arni@DELL:~/project$ cd logs
tanmai_arni@DELL:~/project/logs$ grep "ERROR" system.log
ERROR: Disk read failure
ERROR: Backup failed due to permission denied
ERROR: Network timeout occurred
tanmai_arni@DELL:~/project/logs$ grep "ERROR" system.log | wc -l
3
tanmai_arni@DELL:~/project/logs$  ERROR=$(grep "ERROR" system.log | wc -l)
echo "Total ERROR: $ERROR"
Total ERROR: 3
# IN ALL ".log" files
ERROR=$(grep "ERROR" *.log | wc -l)
echo "Total ERROR: $ERROR"
WARNING=$(grep "WARNING" *.log | wc -l)
echo "Total WARNING: $WARNING"

Total ERROR: 7
Total WARNING: 4

